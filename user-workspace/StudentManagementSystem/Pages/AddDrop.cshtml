@page
@model StudentManagementSystem.Pages.AddDropModel
@{
    ViewData["Title"] = "Add/Drop Courses";
}

<div class="container mt-4">
    <h2 class="mb-4">Add/Drop Courses</h2>

    <div class="row">
        <!-- Available Courses -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Available Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.AvailableCourses.Any())
                    {
                        <div class="list-group">
                            @foreach (var course in Model.AvailableCourses)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@course.CourseName</h6>
                                            <small class="text-muted">
                                                Credits: @course.Credits | Fee: $@course.Fee.ToString("N2")
                                            </small>
                                            <div>
                                                <small class="text-muted">
                                                    Available Seats: @(course.MaxSeats - course.CourseEnrollments.Count(ce => ce.Status == EnrollmentStatus.Active))
                                                </small>
                                            </div>
                                        </div>
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="courseId" value="@course.CourseId" />
                                            @if (course.MaxSeats <= course.CourseEnrollments.Count(ce => ce.Status == EnrollmentStatus.Active))
                                            {
                                                <button type="submit" asp-page-handler="Add"
                                                        class="btn btn-success btn-sm"
                                                        disabled="disabled">
                                                    <i class="fas fa-plus me-1"></i> Add
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" asp-page-handler="Add"
                                                        class="btn btn-success btn-sm">
                                                    <i class="fas fa-plus me-1"></i> Add
                                                </button>
                                            }
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center py-3">No courses available for enrollment.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Enrolled Courses -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Enrolled Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentEnrollments.Any())
                    {
                        <div class="list-group">
                            @foreach (var enrollment in Model.CurrentEnrollments)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@enrollment.Course?.CourseName</h6>
                                            <small class="text-muted">
                                                Enrolled: @enrollment.EnrollmentDate.ToShortDateString()
                                            </small>
                                            <div>
                                                <span class="badge bg-@(enrollment.Status == EnrollmentStatus.Active ? "success" : 
                                                                    enrollment.Status == EnrollmentStatus.Pending ? "warning" : 
                                                                    enrollment.Status == EnrollmentStatus.Dropped ? "danger" : "info")">
                                                    @enrollment.Status
                                                </span>
                                            </div>
                                        </div>
                                        @if (enrollment.Status == EnrollmentStatus.Active)
                                        {
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="enrollmentId" value="@enrollment.EnrollmentId" />
                                                <button type="submit" asp-page-handler="Drop" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-minus me-1"></i> Drop
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center py-3">You are not enrolled in any courses.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Course Information -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="alert alert-info">
                <h5><i class="fas fa-info-circle me-2"></i>Important Information</h5>
                <ul class="mb-0">
                    <li>You can enroll in courses until the add/drop deadline</li>
                    <li>Dropping a course after the deadline may result in a 'W' grade</li>
                    <li>Course fees are non-refundable after the add/drop period</li>
                    <li>Contact your academic advisor for guidance on course selection</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}