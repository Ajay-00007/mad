@page
@model StudentManagementSystem.Pages.Enquiry.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6">Contact Us</h2>

    <div class="bg-white rounded-lg shadow-md p-6">
        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

            <div class="space-y-2">
                <label asp-for="Enquiry.Message" class="block text-sm font-medium text-gray-700">Your Message</label>
                <textarea asp-for="Enquiry.Message" rows="5" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                <span asp-validation-for="Enquiry.Message" class="text-sm text-red-600"></span>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Submit Enquiry
                </button>
            </div>
        </form>
    </div>

    <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-semibold mb-4">Previous Enquiries</h3>
        
        @if (Model.PreviousEnquiries?.Any() == true)
        {
            <div class="space-y-4">
                @foreach (var enquiry in Model.PreviousEnquiries)
                {
                    <div class="border-l-4 @(enquiry.Status == EnquiryStatus.Resolved ? "border-green-500" : "border-blue-500") pl-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-gray-600">@enquiry.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                                <p class="mt-1">@enquiry.Message</p>
                            </div>
                            <span class="px-2 py-1 text-sm rounded-full @(enquiry.Status == EnquiryStatus.Resolved ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800")">
                                @enquiry.Status
                            </span>
                        </div>
                        @if (!string.IsNullOrEmpty(enquiry.Response))
                        {
                            <div class="mt-2 pl-4 border-l border-gray-200">
                                <p class="text-sm text-gray-600">Response:</p>
                                <p class="mt-1">@enquiry.Response</p>
                                <p class="text-sm text-gray-500">@enquiry.ResponseDate?.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500">No previous enquiries found.</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}