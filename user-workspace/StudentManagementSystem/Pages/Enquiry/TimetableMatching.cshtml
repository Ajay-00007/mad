@page
@model StudentManagementSystem.Pages.Enquiry.TimetableMatchingModel
@{
    ViewData["Title"] = "Timetable Matching";
}

<div class="container mt-4">
    <h2 class="mb-4">Timetable Matching</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Current Schedule</h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentSchedule.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Day</th>
                                        <th>Time</th>
                                        <th>Course</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var schedule in Model.CurrentSchedule.OrderBy(s => s.DayOfWeek).ThenBy(s => s.StartTime))
                                    {
                                        <tr>
                                            <td>@schedule.DayOfWeek.ToString()</td>
                                            <td>@schedule.StartTime.ToString("HH:mm") - @schedule.EndTime.ToString("HH:mm")</td>
                                            <td>@schedule.Course.CourseName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            You don't have any courses scheduled yet.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Available Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.AvailableCourses.Any())
                    {
                        foreach (var course in Model.AvailableCourses)
                        {
                            <div class="card mb-3 @(Model.ConflictingCourses[course.CourseId] ? "border-danger" : "")">
                                <div class="card-body">
                                    <h6 class="card-title">@course.CourseName</h6>
                                    <p class="card-text small mb-2">@course.CourseCode</p>
                                    
                                    @if (Model.ConflictingCourses[course.CourseId])
                                    {
                                        <div class="alert alert-danger py-2 mb-2">
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            Schedule conflict detected
                                        </div>
                                    }
                                    
                                    <div class="small text-muted mb-2">
                                        Schedule:
                                        <ul class="list-unstyled ms-3 mb-0">
                                            @foreach (var schedule in course.CourseSchedules.OrderBy(s => s.DayOfWeek))
                                            {
                                                <li>
                                                    @schedule.DayOfWeek.ToString(): 
                                                    @schedule.StartTime.ToString("HH:mm") - @schedule.EndTime.ToString("HH:mm")
                                                </li>
                                            }
                                        </ul>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary fw-bold">
                                            $@course.CourseFee.ToString("N2")
                                        </span>
                                        <a href="/Courses/Details/@course.CourseId" class="btn btn-outline-primary btn-sm">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No courses are available for enrollment at this time.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any client-side functionality here
        });
    </script>
}