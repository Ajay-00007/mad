@page
@model StudentManagementSystem.Pages.StatementModel
@{
    ViewData["Title"] = "Statement";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Account Statement</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Student Information</h5>
                    <p><strong>Name:</strong> @Model.Student.FullName</p>
                    <p><strong>ID:</strong> @Model.Student.StudentId</p>
                    <p><strong>Email:</strong> @Model.Student.Email</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p><strong>Statement Date:</strong> @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToShortDateString()</td>
                                <td>@payment.Description</td>
                                <td>$@payment.Amount.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-@(payment.Status == PaymentStatus.Completed ? "success" : 
                                                         payment.Status == PaymentStatus.Pending ? "warning" : 
                                                         payment.Status == PaymentStatus.Failed ? "danger" : "info")">
                                        @payment.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" class="text-end"><strong>Total Paid:</strong></td>
                            <td colspan="2"><strong>$@Model.TotalPaid.ToString("N2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>