@page
@model StudentManagementSystem.Pages.Account.UpdateBankDetailsModel
@{
    ViewData["Title"] = "Update Bank Details";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">Update Bank Details</h2>

        <div class="bg-white rounded-lg shadow-md p-6">
            @if (Model.BankDetails != null)
            {
                <div class="mb-6">
                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-info-circle text-blue-500"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-blue-700">
                                    Your current bank details are shown below. Update any information that needs to be changed.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <form method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

                <div class="space-y-2">
                    <label asp-for="BankDetails.AccountHolderName" class="block text-sm font-medium text-gray-700">
                        Account Holder Name
                    </label>
                    <input asp-for="BankDetails.AccountHolderName" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="BankDetails.AccountHolderName" class="text-sm text-red-600"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="BankDetails.BankName" class="block text-sm font-medium text-gray-700">
                        Bank Name
                    </label>
                    <input asp-for="BankDetails.BankName" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="BankDetails.BankName" class="text-sm text-red-600"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="BankDetails.AccountNumber" class="block text-sm font-medium text-gray-700">
                        Account Number
                    </label>
                    <input asp-for="BankDetails.AccountNumber" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="BankDetails.AccountNumber" class="text-sm text-red-600"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="BankDetails.BranchCode" class="block text-sm font-medium text-gray-700">
                        Branch Code
                    </label>
                    <input asp-for="BankDetails.BranchCode" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="BankDetails.BranchCode" class="text-sm text-red-600"></span>
                </div>

                <div class="flex items-center justify-between pt-4">
                    <button type="submit" 
                            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Update Bank Details
                    </button>
                    <a asp-page="/Profile" 
                       class="text-gray-600 hover:text-gray-900">
                        Back to Profile
                    </a>
                </div>
            </form>

            @if (Model.BankDetails != null)
            {
                <div class="mt-8 pt-6 border-t border-gray-200">
                    <h3 class="text-lg font-semibold mb-4">Update History</h3>
                    <div class="text-sm text-gray-600">
                        <p>Last updated: @(Model.BankDetails.LastUpdated.ToString("MMM dd, yyyy HH:mm") ?? "Never")</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}