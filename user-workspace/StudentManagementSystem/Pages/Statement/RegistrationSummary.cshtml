@page
@model StudentManagementSystem.Pages.Statement.RegistrationSummaryModel
@{
    ViewData["Title"] = "Registration Summary";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6">Registration Summary</h2>

    @if (Model.CurrentRegistration != null)
    {
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex justify-between items-center mb-4">
                <div>
                    <h3 class="text-xl font-semibold">Current Term: @Model.CurrentRegistration.AcademicTerm</h3>
                    <p class="text-gray-600">Registration Date: @Model.CurrentRegistration.RegistrationDate.ToString("MMM dd, yyyy")</p>
                </div>
                <div class="text-right">
                    <p class="text-lg font-medium">Total Credits: @Model.CurrentRegistration.TotalCredits</p>
                    <p class="text-lg font-medium">Total Fees: @Model.CurrentRegistration.TotalFees.ToString("C")</p>
                </div>
            </div>

            <div class="mt-6">
                <h4 class="text-lg font-semibold mb-3">Enrolled Courses</h4>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Course</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Credits</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fee</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var enrollment in Model.CurrentRegistration.Enrollments)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">@enrollment.Course?.CourseName</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@enrollment.Course?.Credits</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@enrollment.Course?.Fee.ToString("C")</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-sm rounded-full 
                                            @(enrollment.Status == EnrollmentStatus.Active ? "bg-green-100 text-green-800" : 
                                              enrollment.Status == EnrollmentStatus.Pending ? "bg-yellow-100 text-yellow-800" : 
                                              "bg-red-100 text-red-800")">
                                            @enrollment.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold mb-4">Class Timetable</h3>
            <div class="grid grid-cols-7 gap-4">
                @foreach (var day in Enum.GetValues<DayOfWeek>())
                {
                    <div>
                        <h4 class="font-medium mb-2">@day</h4>
                        <div class="space-y-2">
                            @foreach (var schedule in Model.CurrentRegistration.Schedules.Where(s => s.DayOfWeek == day))
                            {
                                <div class="bg-blue-50 p-3 rounded-md">
                                    <p class="font-medium">@schedule.Course?.CourseName</p>
                                    <p class="text-sm text-gray-600">
                                        @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                    </p>
                                    <p class="text-sm">Room: @schedule.Room</p>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6">
            <p class="text-gray-500">No current registration found.</p>
        </div>
    }

    @if (Model.PreviousRegistrations?.Any() == true)
    {
        <div class="mt-8">
            <h3 class="text-xl font-semibold mb-4">Previous Registrations</h3>
            <div class="space-y-4">
                @foreach (var registration in Model.PreviousRegistrations)
                {
                    <div class="bg-white rounded-lg shadow-md p-4">
                        <div class="flex justify-between items-center">
                            <div>
                                <h4 class="font-medium">@registration.AcademicTerm</h4>
                                <p class="text-sm text-gray-600">Registered on @registration.RegistrationDate.ToString("MMM dd, yyyy")</p>
                            </div>
                            <div class="text-right">
                                <p>Credits: @registration.TotalCredits</p>
                                <p>Fees: @registration.TotalFees.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>