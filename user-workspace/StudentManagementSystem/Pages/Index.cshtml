@page
@model StudentManagementSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row align-items-center py-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold mb-4">Welcome to Student Management System</h1>
            <p class="lead mb-4">
                A comprehensive platform for managing student enrollments, courses, and academic progress.
            </p>
            @if (!User.Identity?.IsAuthenticated ?? true)
            {
                <div class="d-grid gap-2 d-md-flex">
                    <a asp-page="/Account/Login" class="btn btn-primary btn-lg px-4 me-md-2">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a asp-page="/Register" class="btn btn-outline-primary btn-lg px-4">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="row g-4 py-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3">
                        <i class="fas fa-graduation-cap fa-2x p-3"></i>
                    </div>
                    <h3 class="card-title h5">Course Management</h3>
                    <p class="card-text">Browse and enroll in a wide range of courses. Track your progress and access course materials.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-3 mb-3">
                        <i class="fas fa-chart-line fa-2x p-3"></i>
                    </div>
                    <h3 class="card-title h5">Progress Tracking</h3>
                    <p class="card-text">Monitor your academic progress, view grades, and track attendance in real-time.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-3 mb-3">
                        <i class="fas fa-money-bill-wave fa-2x p-3"></i>
                    </div>
                    <h3 class="card-title h5">Payment Management</h3>
                    <p class="card-text">Easy payment processing, view payment history, and manage financial records.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="mb-4">Ready to Get Started?</h2>
            <p class="lead mb-4">
                Join our growing community of students and start your educational journey today.
            </p>
            @if (!User.Identity?.IsAuthenticated ?? true)
            {
                <a asp-page="/Register" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </a>
            }
            else
            {
                <a asp-page="/Dashboard" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
            }
        </div>
    </div>
</div>
