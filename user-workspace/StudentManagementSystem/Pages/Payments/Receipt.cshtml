@page "{id:int}"
@model StudentManagementSystem.Pages.Payments.ReceiptModel
@{
    ViewData["Title"] = "Payment Receipt";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8">
            @if (Model.Payment != null)
            {
                <div class="flex justify-between items-start mb-8">
                    <div>
                        <h2 class="text-2xl font-bold">Payment Receipt</h2>
                        <p class="text-gray-600">Receipt #@Model.Payment.PaymentId</p>
                    </div>
                    <div class="text-right">
                        <p class="text-gray-600">Date: @Model.Payment.PaymentDate.ToString("MMM dd, yyyy")</p>
                        <p class="text-gray-600">Time: @Model.Payment.PaymentDate.ToString("HH:mm")</p>
                    </div>
                </div>

                <div class="border-t border-b border-gray-200 py-4 mb-6">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <h3 class="text-lg font-semibold mb-2">Student Details</h3>
                            <p>@Model.Payment.Student?.FullName</p>
                            <p>ID: @Model.Payment.EnrollmentId</p>
                        </div>
                        <div class="text-right">
                            <h3 class="text-lg font-semibold mb-2">Payment Details</h3>
                            <p>Method: @Model.Payment.Method</p>
                            <p>Transaction ID: @Model.Payment.TransactionId</p>
                        </div>
                    </div>
                </div>

                <div class="mb-8">
                    <h3 class="text-lg font-semibold mb-4">Payment Information</h3>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-gray-600">Description</p>
                                <p class="font-medium">@Model.Payment.Description</p>
                            </div>
                            <div class="text-right">
                                <p class="text-gray-600">Amount</p>
                                <p class="text-2xl font-bold">@Model.Payment.Amount.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-8">
                    <div class="flex items-center justify-between">
                        <div>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm
                                @(Model.Payment.Status == PaymentStatus.Completed ? "bg-green-100 text-green-800" : 
                                  Model.Payment.Status == PaymentStatus.Pending ? "bg-yellow-100 text-yellow-800" : 
                                  Model.Payment.Status == PaymentStatus.Failed ? "bg-red-100 text-red-800" : 
                                  "bg-gray-100 text-gray-800")">
                                @Model.Payment.Status
                            </span>
                        </div>
                        @if (Model.RelatedInvoice != null)
                        {
                            <a asp-page="./Invoice" asp-route-id="@Model.RelatedInvoice.InvoiceId" 
                               class="text-blue-600 hover:text-blue-900">
                                View Related Invoice
                            </a>
                        }
                    </div>
                </div>

                <div class="flex justify-between items-center">
                    <button onclick="window.print()" 
                            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Print Receipt
                    </button>
                    <a asp-page="./History" 
                       class="text-gray-600 hover:text-gray-900">
                        Back to Payment History
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-gray-500">Payment receipt not found.</p>
                    <a asp-page="./History" 
                       class="mt-4 inline-block text-blue-600 hover:text-blue-900">
                        Back to Payment History
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    @* Print styles *@
    @@media print {
        .container { margin: 0; padding: 0; }
        .shadow-md { box-shadow: none; }
        button, a { display: none; }
    }
</style>