@page
@model StudentManagementSystem.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "Course Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Management</h2>
        <div class="d-flex gap-2">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Search courses...">
                <button class="btn btn-outline-secondary" type="button" onclick="searchCourses()">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <button type="button" class="btn btn-primary" onclick="showBulkUpdateModal()">
                <i class="fas fa-dollar-sign me-2"></i>Update All Fees
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="coursesTable">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Course Name</th>
                            <th>Credit Hours</th>
                            <th>Enrolled Students</th>
                            <th>Fee ($)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.CourseId</td>
                                <td>@course.CourseName</td>
                                <td>@course.Credits</td>
                                <td>@course.CourseEnrollments.Count</td>
                                <td>$@course.Fee.ToString("N2")</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-primary" 
                                                onclick="viewCourse(@course.CourseId)">
                                            View
                                        </button>
                                        <button type="button" class="btn btn-sm btn-warning" 
                                                onclick="updateFee(@course.CourseId, @course.Fee)">
                                            Update Fee
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Update Fee Modal -->
<div class="modal fade" id="feeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Course Fee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="feeForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="courseId" name="courseId" />
                    <div class="mb-3">
                        <label for="fee" class="form-label">Course Fee ($)</label>
                        <input type="number" class="form-control" id="fee" name="fee" 
                               min="0" step="0.01" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Fee</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bulk Update Modal -->
<div class="modal fade" id="bulkUpdateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Update Course Fees</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="bulkUpdateForm" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="bulkFee" class="form-label">Set All Course Fees To ($)</label>
                        <input type="number" class="form-control" id="bulkFee" name="bulkFee" 
                               value="50.00" min="0" step="0.01" required>
                        <small class="text-muted">This will update all course fees to the specified amount.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update All Fees</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function searchCourses() {
            const input = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#coursesTable tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(input) ? '' : 'none';
            });
        }

        function viewCourse(id) {
            window.location.href = `/Admin/Courses/Details?id=${id}`;
        }

        function updateFee(id, currentFee) {
            document.getElementById('courseId').value = id;
            document.getElementById('fee').value = currentFee;
            new bootstrap.Modal(document.getElementById('feeModal')).show();
        }

        function showBulkUpdateModal() {
            new bootstrap.Modal(document.getElementById('bulkUpdateModal')).show();
        }

        // Handle individual fee update
        document.getElementById('feeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/Admin/Courses/UpdateFee', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to update fee. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });

        // Handle bulk fee update
        document.getElementById('bulkUpdateForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/Admin/Courses/BulkUpdateFees', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to update fees. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        });
    </script>
}