@page
@model StudentManagementSystem.Pages.CoursesModel
@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h2 class="mb-4">My Courses</h2>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Enrolled Courses</h5>
                    <a asp-page="/AddDrop" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-1"></i> Add/Drop Courses
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.EnrolledCourses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Course Name</th>
                                        <th>Credits</th>
                                        <th>Schedule</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.EnrolledCourses)
                                    {
                                        <tr>
                                            <td>@enrollment.Course?.CourseName</td>
                                            <td>@enrollment.Course?.Credits</td>
                                            <td>
                                                @if (enrollment.Course?.CourseSchedules != null)
                                                {
                                                    @foreach (var schedule in enrollment.Course.CourseSchedules)
                                                    {
                                                        <div>@schedule.DayOfWeek: @schedule.StartTime.ToString("HH:mm") - @schedule.EndTime.ToString("HH:mm")</div>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@(enrollment.Status == EnrollmentStatus.Active ? "success" : 
                                                                    enrollment.Status == EnrollmentStatus.Pending ? "warning" : 
                                                                    enrollment.Status == EnrollmentStatus.Dropped ? "danger" : "info")">
                                                    @enrollment.Status
                                                </span>
                                            </td>
                                            <td>
                                                <button class="btn btn-outline-primary btn-sm" onclick="viewCourseDetails(@enrollment.Course?.CourseId)">
                                                    <i class="fas fa-info-circle"></i> Details
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="mb-3">You are not enrolled in any courses.</p>
                            <a asp-page="/AddDrop" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Enroll in Courses
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewCourseDetails(courseId) {
            // Implement course details view logic
            window.location.href = `/Courses/Details?id=${courseId}`;
        }
    </script>
}